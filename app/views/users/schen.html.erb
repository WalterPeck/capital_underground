<!-- ################################################################### 
    												POLICE
    ###################################################################-->

<div class="col-xs-11 col-md-4 col-center-block">
	<h4>Police</h4>
	<%if @user.police >= 66%>
		<div class="progress">
 			<div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="<%=@user.police%>" aria-valuemin="0" aria-valuemax="100" style="width: <%=@user.police%>%">
  <%elsif @user.police >= 45%>
  		<div class="progress">
 				<div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="<%=@user.police%>" aria-valuemin="0" aria-valuemax="100" style="width: <%=@user.police%>%">
  <%elsif @user.police >= 1%>
  		<div class="progress">
 		 		<div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="<%=@user.police%>" aria-valuemin="0" aria-valuemax="100" style="width: <%=@user.police%>%">
  <%else%>
  	<p>error</p>
  <%end%>
  
  
 				</div>
			</div>
	
</div>

<!-- ################################################################### 
    												WEEED
    ###################################################################-->



		
<% if weed_price > 330 %>
	<div class="col-xs-11 col-md-4 col-center-block background_red ">
<%else%>
	<div class="col-xs-11 col-md-4 col-center-block background ">
<%end%>
		
		<div class='row'>			
			
			<div class='col-xs-6'>	
				<div class='activity_rounded'>
					<%=image_tag("weed.jpg", width:'102', height: '102')%> 
				</div>
			</div>
					
				
			<div class='col-xs-6 form_margin'>
				<%= form_for @user, html: {class: "drug_form col-center-block "} do |f| %>
				
			
					
