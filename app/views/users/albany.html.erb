<% provide(:title, @user.dealer) %>

<!-- There is alot of repeated cash process's see if you really need all of them -->

<div class="row">

	<div class='center col-md-12'>

		
		
<!--         This is just the  prices of drugs we set to variables
	################################################################################	-->
		<% weed_price = @user.weed_price%>
	  <% shroom_price = @user.shroom_price %>
		<% molly_price = @user.molly_price%>
		<% cocaine_price = @user.cocaine_price%>
		<% meth_price = @user.meth_price%>
		
		<% oxy_price = @user.oxy_price %>
		
		
		
		
<!-- ############################################################################### -->



		<lead>Hey There <%= @user.dealer %>. <%= @user.movie %> was
			a pretty good movie...I guess.</lead>

		<h2>
			You have $<%= @user.cash %> go buy some fuggin drugs
		
		</h2>

		
		<p>You have <%= @user.weed%> ounces of chronic/weed/nug .</p>
		<p>You have <%= @user.shrooms%> ounces of magic mushrooms.</p>
		<p>You have <%= @user.molly%> ounces of molly.</p>
		<p>You have <%= @user.cocaine%> ounces of cocaine.</p>
    <p>You have <%= @user.meth%>    ounces of meth.</p>
    <p>You have <%= @user.oxy%>     pills of oxycontin.</p>
    

	  <p><b>test:</b><i>		 		 <%= @lame %>     		 per ounce</i></p>
	  <p><b>@@switch before the method</b><i>		 		 <%= @first_time%>   </i></p>
		<p><b>view variable from the controller:</b><i>		 		 <%= @view_variable %></i></p>
		<p><b>@@switch after the method</b><i>		 		 <%= @second_time %>     		</i></p>
		
	</div>
</div>
<!-- first row-->

<!-- ################################################################### 
     ###################################################################-->


<div class="row">
		
		
			<% if weed_price > 300 %>
			
			<div class="col-xs-11 col-md-4 c background_red ">
	<%else%>
			<div class="col-xs-11 col-md-4 c background ">
	<%end%>
		
		<div class='activity_rounded'>
			<%=image_tag("weed.jpg", width:'110', height: '110')%> 
		</div>
		
		<div class='  forms pull-right  center'>
		
			<h4 class='drug_label'>
	  		Cannabis
	  	</h4>
		
			<%= form_for @user, html: {class: "drug_form"} do |f| %>
		
			<%= f.select(:weed, [["1 ounce $#{weed_price}", 1], ["2 ounces $#{weed_price * 2}", 2],["3 ounces $#{(weed_price * 2.5).to_i}", 3]]) %>
			
	
			<%= f.submit "Buy",  :name => "buy_weed",    class: "btn btn-success",   id:"buy_weed" %>
			<%= f.submit "Sell", :name => "sell_weed",   class: "btn btn-danger",    id:"sell_weed" %>
   
			<% end %>
		</div>
  	</div>
		
		
		<% if shroom_price > 275 %>
			
			<div class="col-xs-11 col-md-4 c background_red ">
		<%else%>
			<div class="col-xs-11 col-md-4 c background ">
		<%end%>
		   
		   <div class='activity_rounded'>
		   	<%=image_tag("shrooms.jpg", width:'110', height: '110')%> 
		   	</div>
		
		<div class='  forms pull-right  center'>
		
			<h4 class='drug_label'>
	  		Mushrooms
	    </h4>
		
		<%= form_for @user, html: {class: "drug_form"}  do |f| %>
		<%= f.select(:shrooms, [["1 ounce $#{shroom_price}", 1], ["2 ounces $#{shroom_price * 2}", 2],["3 ounces $#{(shroom_price * 2.5).to_i}", 3]])%>
 		
 				
 		<%= f.submit "Buy",  :name => "buy_shrooms", class: "btn btn-success", id:"buy_shrooms" %>
 		<%= f.submit "Sell", :name => "sell_shrooms", class: "btn btn-danger", id:"sell_shrooms"%>
	 	<% end %>
		</div>
	  </div>
		
		
		
		
		<% if molly_price > 675 %>
			
			<div class=" col-xs-11 col-md-4 c background_red">
	<%else%>
			<div class=" col-xs-11 col-md-4 c background">
	<%end%>
		
		<div class='activity_rounded'>
			<%=image_tag("molly.jpg", width:'110', height: '110')%> 
		</div>
		
		<div class='  forms pull-right  center'>
		
			<h4 class='drug_label'>
	  		Molly
	  	</h4>
		<%= form_for @user, html: {class: "drug_form"} do |f| %>
		
		<%= f.select(:molly, [["1 ounce $#{molly_price}", 1], ["2 ounces $#{molly_price * 2}", 2],["3 ounces $#{(molly_price * 2.5).to_i}", 3]]) %>
	

	  <%= f.submit "Buy",  :name => "buy_molly",  class: "btn btn-success", id:"buy_molly" %>
 	  <%= f.submit "Sell", :name => "sell_molly", class: "btn btn-danger",  id:"sell_molly"%>
		<% end %>
		</div>
		</div>
		
		
		
		
		<% if cocaine_price > 1300 %>
			
			<div class=" col-xs-11 col-md-4 c background_red">
	<%else%>
			<div class=" col-xs-11 col-md-4 c background">
	<%end%>
		
		<div class='activity_rounded'>
			<%=image_tag("cocaine.jpg", width:'110', height: '110')%> 
		</div>
		
		<div class='  forms pull-right  center'>
		
			<h4 class='drug_label'>
	  		Cocaine
	  	</h4>	
		
	  <%= form_for @user, html: {class: "drug_form"} do |f| %>
		
		<%= f.select(:cocaine, [["1 ounce $#{cocaine_price}", 1], ["2 ounces $#{cocaine_price * 2}", 2], ["3 ounces $#{(cocaine_price * 2.5).to_i}", 3]]) %>
	

		<%= f.submit "Buy",  :name => "buy_cocaine",  class: "btn btn-success", id:"buy_cocaine" %>
		<%= f.submit "Sell", :name => "sell_cocaine", class: "btn btn-danger", id:"sell_cocaine"%>
		<% end %>
		</div>
		</div>
    
    
    
    
    	<% if meth_price > 1500 %>
			
			<div class=" col-xs-11 col-md-4 c background_red">
	<%else%>
			<div class=" col-xs-11 col-md-4 c background">
	<%end%>
		
		<div class='activity_rounded'>
			<%=image_tag("meth.jpg", width:'110', height: '110')%> 
		</div>
		
		<div class='  forms pull-right  center'>
		
			<h4 class='drug_label'>
	  		Crystal Meth
	  	</h4>	
		<%= form_for @user, html: {class: "drug_form"} do |f| %>
		
		<%= f.select(:meth, [["1 ounce $#{meth_price}", 1], ["2 ounces $#{meth_price * 2}", 2], ["3 ounces $#{(meth_price * 2.5).to_i}", 3]]) %>
		
		
		<%= f.submit "Buy",  :name => "buy_meth",  class: "btn btn-success", id:"buy_meth" %>
		<%= f.submit "Sell", :name => "sell_meth", class: "btn btn-danger",  id:"sell_meth" %>
		<% end %>
		</div>
		</div>
    
    
    
    
    <% if oxy_price > 2500 %>
			
			<div class=" col-xs-11 col-md-4 c background_red">
	<%else%>
			<div class=" col-xs-11 col-md-4 c background">
	<%end%>
		
		<div class='activity_rounded'>
			<%=image_tag("oxy.jpg", width:'110', height: '110')%> 
		</div>
		
		<div class='  forms pull-right center'>
		
			<h4 class='drug_label'>
	  		Oxycontin
	  	</h4>	
		<%= form_for @user, html: {class: "drug_form"} do |f| %>
		
		<%= f.select(:oxy, [["50 pills $#{oxy_price}", 1], ["100 pills $#{oxy_price * 2}", 2], ["200 pills $#{(oxy_price * 3.3).to_i}", 4]]) %>
		<%= f.hidden_field :cash, :value => oxy_price %>
		
		<%= f.submit "Buy",  :name => "buy_oxy",  class: "btn btn-success", id:"buy_oxy" %>
		<%= f.submit "Sell", :name => "sell_oxy", class: "btn btn-danger", id:"sell_oxy" %>
		<% end %>
		</div>
		</div>	

</div>