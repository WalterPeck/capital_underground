<%= provide(:title, 'Sign Up') %>
<h1>Create Your Dealer </h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f|%>
			<%= render 'shared/error_messages' %>
			<%= f.label :dealer, 'User/Dealer Name'%>
			<%= f.text_field (:dealer) %>
			
			<%= f.label :movie, 'Favorite Movie' %>
			<%= f.text_field :movie %>
			
			<%= f.label :password %>
			<%= f.password_field :password %>
			
			<%= f.label :password_confirmation, "Confirmation" %>
			<%= f.password_field :password_confirmation %>
			
			<!--<%= f.hidden_field(:dealer, :value => params[:name])%>-->
			<!--<input id="user_dealer" name="user[dealer]" type="post" value="user[name]" />-->
			<%= f.submit "Create my Dealer", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>

