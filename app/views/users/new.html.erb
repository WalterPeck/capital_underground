<%= provide(:title, 'Sign Up') %>
<h1>Create Your Dealer </h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f|%>
			<%= render 'shared/error_messages' %>
			<%= f.label :name, 'Username'%>
			<%= f.text_field :name %>
			
			<%= f.label :movie, 'Favorite Movie' %>
			<%= f.text_field :movie %>
			
			<%= f.label :password %>
			<%= f.password_field :password %>
			
			<%= f.label :password_confirmation, "Confirmation" %>
			<%= f.password_field :password_confirmation %>
			
			<%= f.submit "Create my Dealer", class: "btn btn-large btn-primary" %>
		<% end %>
	</div>
</div>

